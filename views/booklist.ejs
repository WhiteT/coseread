
  <div class="row container">
    <% books.forEach(function(book, index) { %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <img src="img/<%=book.name%>.jpg" style="width:200px;height:300px;" data-src="holder.js/200x300" alt="...">
        <div class="caption" style="text-align:center;">
          <h3><%=book.name%></h3>
          <p>
            书目描述
          </p>
          <p><a href="#" class="btn btn-primary" role="button"><%=book.genre%></a> <a href="#" class="btn btn-default" role="button"><%=book.author%></a></p>
        </div>
      </div>
    </div>
    <% }); %>
  </div>

